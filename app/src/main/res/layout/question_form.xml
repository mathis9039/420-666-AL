<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_v3"
    tools:context=".QuestionForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageView
            android:id="@+id/retourBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/back_btn"/>

        <TextView
            android:id="@+id/nomSujet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Ajout de question"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_backgroud_yellow10"
        android:gravity="center"
        android:minHeight="100dp"
        android:hint="Écrire la question ici"
        android:padding="20dp"
        android:textColor="#cc000000"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:hint="Option 1"
        android:background="@drawable/round_back_white_stroke2_10"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Option 2"
        android:background="@drawable/round_back_white_stroke2_10"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Option 3"
        android:background="@drawable/round_back_white_stroke2_10"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Option 4"
        android:background="@drawable/round_back_white_stroke2_10"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Réponse"
        android:background="@drawable/round_back_white_stroke2_10"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addQuestion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="ajouter la question"
        android:background="@drawable/round_back_btn10"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_marginEnd="20dp"/>
</LinearLayout>