<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_v3"
    tools:context=".QuizResult">

    <TextView
        android:id="@+id/successText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="100dp"
        android:text="Félicitation, tu as complété se quiz"
        android:textSize="50dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_below="@+id/successText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correctAnswer"
            android:text="Bonne réponse: 0"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#00C853"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incorrectAnswer"
            android:layout_marginTop="5dp"
            android:text="Mauvaise réponse: 0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#DD2C00"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acceuilBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Acceuil"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_back_btn10"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
</RelativeLayout>